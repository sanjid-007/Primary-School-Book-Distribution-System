            <script>
              async function updateResults() {
                const yearInput = document.getElementById('yearInput');
                const bookInput = document.getElementById('bookInput');
                const selectedYear = yearInput.value;
                const selectedBook = bookInput.value;

                try {
                  const response = await fetch(`http://localhost:4000/class4-year-book-submit?selectedYear=${selectedYear}&selectedBook=${selectedBook}`);
                  if (response.ok) {
                    const data = await response.json();
                    updateTable(data);
                  } else {
                    console.error('Error fetching data:', response.statusText);
                  }
                } catch (error) {
                  console.error('Error:', error.message);
                }
              }


              function mapSubjectName(subjectValue) {
                // Map integer values to corresponding strings
                const subjectMap = {
                  1: 'আমার বাংলা বই',
                  2: 'English for Today',
                  3: 'প্রাথমিক গণিত', // Add more mappings as needed
                  4: 'প্রাথমিক বিজ্ঞান',
                  5: 'বাংলাদেশ ও বিশ্বপরিচয়',
                  6: 'ধর্ম ও নৈতিক শিক্ষা',
                };

                // Return the mapped string or the original value if not found in the map
                return subjectMap[subjectValue] || subjectValue;
              }

              function updateTable(data) {
                const tableBody = document.getElementById('bookTableBody');
                const totalBooksElement = document.getElementById('totalBooks');
                let totalBooks = 0;

                tableBody.innerHTML = ''; // Clear existing content

                data.forEach(book => {
                  const row = document.createElement('tr');
                   const formattedDate = new Date(book.book_date).toLocaleDateString('en-US'); // Format the date
                  row.innerHTML = `
      <td>${book.year}</td>
      <td>${book.class}</td>
       <td>${mapSubjectName(book.subject_name)}</td>
      <td>${book.number_of_books}</td>
      <td>${formattedDate}</td>
    `;
                  tableBody.appendChild(row);

                  // Update total
                  totalBooks += parseInt(book.number_of_books);
                });

                // Update the totalBooksElement
                totalBooksElement.textContent = totalBooks.toString();
                console.log(totalBooks);
              }


            </script>



