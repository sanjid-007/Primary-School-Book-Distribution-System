      src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"
      type="text/javascript"
    ></script>
    <script src="form.js"></script>
  </head>

  <body>
    <div class="container">
      <form
        class="well form-horizontal"
        action="/save-bookfrom-ntcb-info"
        method="post"
        id="contact_form"
      >
        <fieldset>
          <!-- Text input-date -->

          <div class="form-group">
            <label class="col-md-4 control-label">তারিখ</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-calendar"></i
                ></span>
                <input
                 name
="date"
                  placeholder="তারিখ"
                  class="form-control"
                  type="date"
                />
              </div>
            </div>
          </div>

          <!-- Text input-class -->
          <div class="form-group">
            <label class="col-md-4 control-label">শ্রেণি </label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-home"></i
                ></span>
                <select name
="classNo" class="form-control selectpicker">
                  <option value=" ">শ্রেণি নির্বাচন করুন</option>
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Text input-subject's নাম
 -->
          <div class="form-group">
            <label class="col-md-4 control-label">বিষয়</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-book"></i
                ></span>
                <input
                  name
="subject"
                  placeholder="কোন বিষয়ের বই"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>

          <!-- Text input-book number -->
          <div class="form-group">
            <label class="col-md-4 control-label">বইয়ের সংখ্যা </label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"
                  ><i class="glyphicon glyphicon-list-alt"></i
                ></span>
                <input
                  name
="booknumber"
                  placeholder="বইয়ের সংখ্যা"
                  class="form-control"
                  type="number"
                />
              </div>
            </div>
          </div>

          <!-- Success message -->
          {{!-- <div class="alert alert-success" role="alert" id="success_message">
            সাবমিটেড
            <i class="glyphicon glyphicon-thumbs-up"></i> তথ্য গ্রহণ করা হয়েছে,
            অল্প সময় অপেক্ষা করুন
          </div> --}}

          <!-- Submit Button -->
          <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
              <button type="submit" class="btn btn-warning">
                সাবমিট <span class="glyphicon glyphicon-send"></span>
              </button>
            </div>
          </div>
        </fieldset>
      </form>
      <a href="http://localhost:4000/http://127.0.0.1:5500/main-menu.html">
        <button class="back-btn">Back</button>
      </a>
    </div>
  </body>
</html>