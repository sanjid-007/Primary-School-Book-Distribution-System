        <!-- Checkbox checks -->
        <!-- Checkbox checks -->
        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Bangla Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="bangla" name="subjects" value="0" />
            <label for="bangla">Yes</label>
          </div>
        </div>

        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received English Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="english" name="subjects" value="0" />
            <label for="english">Yes</label>
          </div>
        </div>

        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Math Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="math" name="subjects" value="0" />
            <label for="math">Yes</label>
          </div>
        </div>

        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Science Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="science" name="subjects" value="0" />
            <label for="science">Yes</label>
          </div>
        </div>


        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Social Science Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="socialscience" name="subjects" value="0" />
            <label for="socialscience">Yes</label>
          </div>
        </div>

        <!-- Checkbox checks -->
        <div class="form-group">
          <label class="col-md-4 control-label">Has this student received Religion Textbook?</label>
          <div class="col-md-4">
            <input type="checkbox" id="religion" name="subjects" value="0" />
            <label for="religion">Yes</label>
          </div>
        </div>




        <!-- Text area-description -->

        <div class="form-group">
          <label class="col-md-4 control-label">Student Description</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
              <textarea id="comment" class="form-control" name="comment" placeholder="Student Description"></textarea>
            </div>
          </div>
        </div>

